{
    "include": ["**/*.ts", "**/*.tsx", "global.d.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "paths": {
            "~/*": ["src/*"]
        }
    }
}
