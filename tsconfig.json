{
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "global.d.ts",
        "src/utils/window-manager.ts"
    ],
    "exclude": [
        "src/utils/ffmpeg-*.ts",
        "src/utils/file-processor.ts",
        "src/utils/progress-reporter.ts",
        "src/utils/ffmpeg-manager.ts",
        "src/types/ffmpeg.ts",
        "src/components/conversion-progress.tsx"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "paths": {
            "~/*": ["src/*"]
        }
    }
}
